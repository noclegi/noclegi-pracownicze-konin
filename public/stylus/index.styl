screen-xs-max = 500px

.index

  .cover
    /*background-image url('http://www.hostelz.com/pics/hostels/owner/big/48/1988848.jpg')*/
    background-image: linear-gradient(to bottom,#463d7c 0,#5f5499 100%);
    background-size cover
    background-position center
    padding-bottom 30px

    h1, h2
      color white

    h1
      padding-top 20px
      text-transform uppercase
      font-size: 50px

    h2
      font-size 30px
      max-width 600px

    .reservation
      text-align center
      display block
      font-size 30px
      margin-top 20px
      margin-bottom 20px
      padding 15px 20px
      background white
      color black
      white-space nowrap

      .glyphicon
        font-size: 25px
        padding-right 8px
        color #333

    @media (max-width screen-xs-max)
      h1
        font-size: 40px
      .reservation
        font-size: 25px

        .glyphicon
          font-size 20px;

  .rooms
    .thumb
      margin-bottom 10px

      img
        width 100%

  .contact
    p > *
      display block

    .glyphicon
      opacity 0.8
      font-size 80%
      margin-right: 6px



  .map
    iframe
      width 100%
      height 350px
